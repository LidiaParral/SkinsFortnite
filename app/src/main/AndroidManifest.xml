<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.dam.skinsfortnite">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!-- android:usesCleartextTraffic="true" - Evitar el tráfico Cleartext es la falta de confidencialidad,
     autenticidad y protecciones contra la manipulación; Un atacante de red puede escuchar los datos que se transmiten y modificarlos sin ser detectado. -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ifortnite_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ifortnite_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:largeHeap="true"
        android:theme="@style/Theme.Skinsfortnite">
        <activity android:name="com.dam.skinsfortnite.DatosSkinActivity"
            android:parentActivityName="com.dam.skinsfortnite.MainActivity"></activity>
        <activity android:name="com.dam.skinsfortnite.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>